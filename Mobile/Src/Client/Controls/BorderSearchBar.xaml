<?xml version="1.0" encoding="utf-8" ?>

<Border
    BackgroundColor="{StaticResource Gray100}"
    HeightRequest="50"
    Stroke="{AppThemeBinding Light={StaticResource Black},
                             Dark={StaticResource White}}"
    StrokeShape="RoundRectangle 10"
    StrokeThickness="1"
    x:Class="Client.Controls.BorderSearchBar"
    x:Name="This"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <SearchBar
        Placeholder="{Binding Source={x:Reference This}, Path=Placeholder}"
        SearchCommand="{Binding Source={x:Reference This}, Path=SearchCommand}"
        Text="{Binding Source={x:Reference This}, Path=Text}" />
</Border>